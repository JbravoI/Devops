@model List<DelonBoard.Entity.ManageUserRoles>

@{
    ViewData["Title"] = "Manage";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .card-footer {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container" style="background-color: #ccc; height: 100vh; max-height: 100vh; display: flex; align-items: center; justify-content: center;">
        <form method="post" style="display:flex; justify-content:center; align-items: center;">
            <div style="background-color:#fff; border-radius: 5px; box-shadow: 2px 2px 12px rgba(0,0,0,0.5); padding: 50px;">
                <div class="card-header">
                    <h2 style="font-size:27px; text-align:center; padding-bottom:10px;">Manage User Roles</h2>
                    Add or Remove Roles For @ViewBag.UserName
                </div>
                <div class="card-body" style="margin-top:10px;">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input asp-for="@Model[i].Selected" class="form-check-input" />
                            <label style="margin:2px 0;" class="form-check-label" asp-for="@Model[i].Selected">
                                @Model[i].RoleName
                            </label>
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <div>
                        <input type="submit" value="Update" class="btn btn-primary"
                               style="width: auto;" />
                        <a asp-action="Index" asp-route-id="@ViewBag.userId"
                           class="btn btn-danger" style="width: auto; text-decoration: none; margin-left: 10px;">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>


