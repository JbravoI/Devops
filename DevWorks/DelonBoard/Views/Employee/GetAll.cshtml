@model IEnumerable<DelonBoard.Entity.Models.Employee>

@{
    ViewData["Title"] = "List of Employess";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
</head>

<div class="container p-3" style="margin-top:60px;">
    @using (Html.BeginForm("Search", "Employee", FormMethod.Get))
    {
        <div class="d-flex">
            @Html.TextBox("searching", "", new { placeholder = "search by employee name" })<input type="submit" value="Search" class="rounded-3 border-0 outline-none text-white" style="background-color: navy;" />
        </div>
    }


    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Employees</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                Register New Employee
            </a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Employment Type
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">@obj.FirstName</td>
                        <td width="25%">@obj.LastName</td>
                        <td width="25%">@obj.EmploymentType</td>
                        <td width="15%">@obj.PhoneNumber</td>
                        <td width="15%">
                            <a asp-controller="Employee" asp-route-Id="@obj.EmployeeID" asp-action="View" class="btn btn-primary mx-2">
                                View Details
                            </a>
                        </td>
                        <td class="text-centre">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Employee" asp-route-Id="@obj.EmployeeID" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Employee" asp-route-Id="@obj.EmployeeID" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"> </i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No employee record found!</p>
    }
</div>

