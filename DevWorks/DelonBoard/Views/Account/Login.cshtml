@model DelonBoard.Entity.Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .wrapper {
            margin: 50px auto;
            width: 50rem;
            height: 25rem;
        }

        section {
            display: flex;
            justify-content: center;
            align-content: center;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <section>
        <div class="wrapper">
            <h4 class="text-center">Welcome <span class="text-danger">!</span></h4>
            <h5 class="text-muted text-center small">Enter Email and Password to access our dashboard</h5>
            <!-- form -->
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form border border-dark m-auto w-50 p-3 rounded">
                    <div class="container">
                        <div class="row ">
                            <input type="text" class="form-control form-control-sm w-100 rounded-pill" placeholder="Email" asp-for="Email">
                            <input type="password" class="form-control form-control-sm w-100 rounded-pill mt-2" placeholder="Password" asp-for="Password">
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-primary mt-3 w-50" type="submit" value="Login">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
